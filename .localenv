alias vim='vim -S ~/.vimrc'
alias paxing='pax -w -z -x pax -f'
alias unpaxing='pax -ppx -rf'
alias ls='ls -la'

# Functions

function listobj() {
    echo " LISTOBJ" | amblist $1 | tr -cd "[:print:]\n\r\t"
}

function listload() {
    echo " LISTLOAD" | amblist $1 | tr -cd "[:print:]\n\r\t"
}
